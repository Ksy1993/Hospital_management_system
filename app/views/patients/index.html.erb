
<table width="50%" cellpadding="3" cellspacing="3" border="3" bordercolor="black">
	<caption><b>Patients<br></caption>
   <tr>
   	  <th>ID</th>
   	  <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Gender</th>
      <th>Patient Detail</th>
   	  
    	</tr>
  <% @patients.each do |patient| %>
  	<tr>
      <td><%= patient.id %></td>
       <td><%= patient.name %></td>
       <td><%= patient.age %></td>
       <td><%= patient.address %></td>
       <td><%= patient.contact %></td>
       <td><%= patient.gender %></td>
         <td>
            <%= link_to "Edit","/patients/edit/#{patient.id}" %>
            <%= link_to "Delete","/patients/destroy/#{patient.id}" %>
            <%= link_to "Show", "/patients/#{patient.id}"%>
            <%= link_to "all doctors" ,doctors_path(id: patient.id) %>
          </td>
    </tr>
  <% end %>

</table>
